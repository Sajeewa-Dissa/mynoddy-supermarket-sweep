@model IEnumerable<string>
@Html.ActionLink(linkText: "Home", actionName: "Index", controllerName: "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-block btn-default btn-lg" })
@Html.ActionLink(linkText: "All", actionName: "List", controllerName: "Product", routeValues: null, htmlAttributes: new { @class = "btn btn-block btn-default btn-lg" })
@foreach (var link in Model)
{
    @Html.RouteLink(link, new {
    controller = "Product",
    action = "List",
    category = link,
    page = 1
    }, new {
    @class = "btn btn-block btn-default btn-lg"
        + (link == ViewBag.SelectedCategory ? " btn-primary" : "")
    })
}
